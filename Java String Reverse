import java.io.*;
import java.util.*;

public class Solution {

    public static void main(String[] args) {
        
        Scanner sc=new Scanner(System.in);
        String A=sc.next();
        sc.close();
        String B = "";
        
        for(int i=A.length()-1;i>=0;i--){
            B = B.concat(""+A.charAt(i));
        }
        
        if(A.equals(B)){
            System.out.print("Yes");
        }
        else{
            System.out.print("No");
        }
        
    }
}
